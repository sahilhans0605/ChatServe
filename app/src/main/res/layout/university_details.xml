<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".Activities.UniversityDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:background="@drawable/user_image_back"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_image_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameUniversityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_namesvg"
        android:background="@drawable/rounded_textview"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20dp"
        android:paddingStart="13dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/userImage" />

    <EditText
        android:id="@+id/universityCollegeInstitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:paddingStart="13dp"
        android:drawableLeft="@drawable/ic_organization"
        android:textSize="15sp"
        android:hint=" Organization"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:background="@drawable/rounded_textview"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="@+id/nameUniversityDetails"
        app:layout_constraintTop_toBottomOf="@+id/nameUniversityDetails" />

    <EditText
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint=" Profession"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_profession"
        android:paddingStart="13dp"
        android:textSize="15sp"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:background="@drawable/rounded_textview"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/universityCollegeInstitute"
        app:layout_constraintTop_toBottomOf="@+id/universityCollegeInstitute" />

    <EditText
        android:id="@+id/skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="  Skill"
        android:drawableLeft="@drawable/ic_skillsvg"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20dp"
        android:paddingStart="13dp"
        android:textSize="15sp"
        android:background="@drawable/rounded_textview"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/course"
        app:layout_constraintTop_toBottomOf="@+id/course" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:onClick="signUp"
        android:textColor="@color/white"
        android:text="Complete My profile"
        android:backgroundTint="#FC6B68"
        android:padding="15dp"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skills" />

    <ImageView
        android:id="@+id/addIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/userImage"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="@+id/userImage"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_editsvg" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
